{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/policy.schema.json",
  "title": "DuckCodeModeling Policy Pack v2",
  "type": "object",
  "required": ["pack", "policies"],
  "additionalProperties": false,
  "properties": {
    "pack": {
      "type": "object",
      "required": ["name", "version"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "description": { "type": "string" },
        "extends": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        }
      }
    },
    "policies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "severity"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "enabled": { "type": "boolean", "default": true },
          "type": {
            "type": "string",
            "enum": [
              "require_entity_tags",
              "require_field_descriptions",
              "classification_required_for_tags",
              "rule_target_required",
              "naming_convention",
              "require_indexes",
              "require_owner",
              "require_sla",
              "deprecation_check",
              "custom_expression"
            ]
          },
          "severity": { "type": "string", "enum": ["info", "warn", "error"] },
          "params": { "type": "object" }
        }
      }
    }
  }
}
